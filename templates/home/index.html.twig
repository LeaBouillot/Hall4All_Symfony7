{% extends 'base.html.twig' %}


{% block title %}Home
{% endblock %}


{% block body %}
	<div class="relative z-0 flex flex-col-reverse py-16 lg:pt-0 lg:flex-col lg:pb-0">
		<div class="inset-y-0 top-0 right-0 z-0 w-full max-w-xl px-4 mx-auto md:px-0 lg:pr-0 lg:mb-0 lg:mx-0 lg:w-7/12 lg:max-w-full lg:absolute xl:px-0">
			<svg class="absolute left-0 hidden h-full text-white transform -translate-x-1/2 lg:block" viewbox="0 0 100 100" fill="currentColor" preserveaspectratio="none slice">
				<path d="M50 0H100L50 100H0L50 0Z"></path>
			</svg>
			<img class="z-0 object-cover w-full h-56 rounded shadow-lg lg:rounded-none lg:shadow-none md:h-96 lg:h-full" src="https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg?auto=compress&amp;cs=tinysrgb&amp;dpr=2&amp;h=750&amp;w=1260" alt=""/>
		</div>
		<div class="relative flex flex-col items-start w-full max-w-xl px-4 mx-auto md:px-0 lg:px-8 lg:max-w-screen-xl">
			<div class="mb-16 lg:my-40 lg:max-w-lg lg:pr-5">
				<p class="inline-block px-3 py-px mb-4 text-xs font-semibold tracking-wider text-teal-900 uppercase rounded-full bg-teal-accent-400">
					Brand new
				</p>
				<h2 class="mb-5 font-sans text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl sm:leading-none">
					Everything you<br class="hidden md:block"/>
					can imagine
					<span class="inline-block text-deep-purple-accent-400">is real</span>
				</h2>
				<p class="pr-5 mb-5 text-base text-gray-700 md:text-lg">
					Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa quae. explicabo.
				</p>
				<div class="flex items-center">
					<a href="/" class="inline-flex items-center justify-center h-12 px-6 mr-6 font-medium tracking-wide text-white transition duration-200 rounded shadow-md bg-deep-purple-accent-400 hover:bg-deep-purple-accent-700 focus:shadow-outline focus:outline-none">
						Get started
					</a>
					<a href="/" aria-label="" class="inline-flex items-center font-semibold text-gray-800 transition-colors duration-200 hover:text-deep-purple-accent-700">Learn more</a>
				</div>
			</div>
		</div>
	</div>

	<!--Bloc formulaire de recherche -->
	<div class="flex justify-center mt-10">
		<div class="w-full max-w-4xl p-6 border rounded-lg bg-zinc-200 ">
			<h2 class="mb-6 text-2xl font-bold text-center">Que cherchez-vous ?</h2>


			<form>
				<div
					class="flex space-x-4">
					{# Premier Select #}
					<div class="w-1/2">
						<label for="city" class="block text-sm font-medium text-gray-700">Ville</label>
						<select id="ville" name="ville" class="block w-full px-3 py-2 mt-1 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
							<option value="">Toutes les villes</option>
							<option value="Paris">Paris</option>
							<option value="Lyon">Lyon</option>
							<option value="Marseille">Marseille</option>
							{# <option value="">Sélectionner une ville</option>
														                        {% for city in cities %}
														                            <option value="{{ city.id }}">{{ city.name }}</option>
														                        {% endfor %} #}
						</select>
					</div>
					{# Trait de séparation vertical #}
					<div class="w-px mx-4 bg-gray-700 h-15"></div>
					{# Deuxième Select #}
					<div class="w-1/2">
						<label for="capacite" class="block text-sm font-medium text-gray-700">Capacités</label>
						<select id="capacite" name="capacite" class="block w-full px-3 py-2 mt-1 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
							<option value="">Toutes les capacités</option>
							<option value="10-20">10-20 personnes</option>
							<option value="20-50">20-50 personnes</option>
							<option value="50-100">50-100 personnes</option>
							<!-- Ajoutez d'autres options pour les autres capacités -->
						</select>
					</div>
					{# Bouton de recherche #}
					<div class="flex justify-center mt-6">
						<button type="submit" class="px-2 py-2 text-sm font-medium text-white bg-indigo-800 rounded-md hover:bg-indigo-700">
							<span title='Search'>{{ ux_icon('material-symbols:search',{'class': 'h-6 w-6'}) }}
							</span>
						</button>
					</div>
				</div>


			</form>
		</div>
	</div>
	{# fin exemple #}
	
	<section class="w-1/2 p-5 my-5 bg-slate-400 opacity-55 ">
		<div class="w-1/3 mx-auto block-search-form">
			<form>
				<div class="mb-4">
					<label for="ville" class="block mb-2 text-sm font-bold text-gray-700">Ville :</label>
					<select id="ville" name="ville" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
						<option value="">Toutes les villes</option>
						<option value="Paris">Paris</option>
						<option value="Lyon">Lyon</option>
						<option value="Marseille">Marseille</option>
						<!-- Ajoutez d'autres options pour les autres villes -->
					</select>
				</div>
				<div class="mb-4">
					<label for="ergonomie" class="block mb-2 text-sm font-bold text-gray-700">Ergonomie :</label>
					<select id="ergonomie" name="ergonomie" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
						<option value="">Toutes les ergonomies</option>
						<option value="Ergonomie 1">Ergonomie 1</option>
						<option value="Ergonomie 2">Ergonomie 2</option>
						<option value="Ergonomie 3">Ergonomie 3</option>
						<!-- Ajoutez d'autres options pour les autres ergonomies -->
					</select>
				</div>
				<div class="mb-4">
					<label for="capacite" class="block mb-2 text-sm font-bold text-gray-700">Capacité :</label>
					<select id="capacite" name="capacite" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
						<option value="">Toutes les capacités</option>
						<option value="10-20">10-20 personnes</option>
						<option value="20-50">20-50 personnes</option>
						<option value="50-100">50-100 personnes</option>
						<!-- Ajoutez d'autres options pour les autres capacités -->
					</select>
				</div>
				<div class="mb-4">
					<label for="equipement" class="block mb-2 text-sm font-bold text-gray-700">Équipement :</label>
					<select id="equipement" name="equipement" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
						<option value="">Tous les équipements</option>
						<option value="Projetor">Projecteur</option>
						<option value="Ecran">Écran</option>
						<option value="Sonorisation">Sonorisation</option>
						<!-- Ajoutez d'autres options pour les autres équipements -->
					</select>
				</div>
				<button type="submit" class="px-4 py-2 font-bold text-white bg-blue-500 rounded hover:bg-blue-700">Filtrer</button>
			</form>
		</div>
	</section>
{% endblock %}