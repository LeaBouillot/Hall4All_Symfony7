{% extends 'base.html.twig' %}

{% block title %}Contact Us
{% endblock %}

{% block body %}

	<main>

		<div class="flex items-center justify-center min-h-full px-4 py-12 sm:px-6 lg:px-8">
			<div class="w-full max-w-md space-y-8">
				<div>
					<h2 class="mt-6 text-3xl font-extrabold text-center text-gray-900">Contact Us</h2>
					<p class="mt-2 text-sm text-center text-gray-600">We would love to hear from you! Fill in the form below.</p>
				</div>

				{% for message in app.flashes('success') %}
					<div class="p-4 mb-4 text-sm text-green-700 bg-green-100 rounded-lg" role="alert">
						{{ message }}
					</div>
				{% endfor %}

				{{ form_start(form, { 'attr': {'class': 'space-y-4'} }) }}

				<div class="space-y-4">
					<div>
						<label for="name" class="block text-sm font-medium text-gray-700">Your Name</label>
						{{ form_widget(form.name, { 'attr': {'class': 'relative block w-full px-3 py-2 text-gray-900 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'} }) }}
						{% if form.name.vars.errors|length > 0 %}
							<p class="text-sm text-red-500">{{ form_errors(form.name) }}</p>
						{% endif %}
					</div>

					<div>
						<label for="email" class="block text-sm font-medium text-gray-700">Your Email</label>
						{{ form_widget(form.email, { 'attr': {'class': 'relative block w-full px-3 py-2 text-gray-900 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'} }) }}
						{% if form.email.vars.errors|length > 0 %}
							<p class="text-sm text-red-500">{{ form_errors(form.email) }}</p>
						{% endif %}
					</div>

					<div>
						<label for="subject" class="block text-sm font-medium text-gray-700">Subject</label>
						{{ form_widget(form.subject, { 'attr': {'class': 'relative block w-full px-3 py-2 text-gray-900 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'} }) }}
						{% if form.subject.vars.errors|length > 0 %}
							<p class="text-sm text-red-500">{{ form_errors(form.subject) }}</p>
						{% endif %}
					</div>

					<div>
						<label for="message" class="block text-sm font-medium text-gray-700">Message</label>
						{{ form_widget(form.message, { 'attr': {'class': 'relative block w-full px-3 py-2 text-gray-900 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm', 'rows': 4} }) }}
						{% if form.message.vars.errors|length > 0 %}
							<p class="text-sm text-red-500">{{ form_errors(form.message) }}</p>
						{% endif %}
					</div>
				</div>

				{{ form_end(form) }}
			</div>
		</div>
	</main>
{% endblock %}


