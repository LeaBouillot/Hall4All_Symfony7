{# list des reservations #}

{% extends 'base.html.twig' %}

{% block title %}My Reservations
{% endblock %}

{% block body %}
<a href="{{ path('app_reservation_new') }}" class="btn btn-success">Add New Reservation</a> 
{# <pre>
    {{ dump() }}
</pre> #}

    <h1>My Reservations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Hall</th>
                <th>Image</th>
                <th>Area</th>
                <th>Capacity</th>
                <th>Price per Hour</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Confirmed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.hallId.name }}</td>
                    <td>{{ reservation.hallId.mainImg }}</td>
                    <td>{{ reservation.hallId.area }}</td>
                    <td>{{ reservation.hallId.capacityMax }}</td>
                     <td>{{ reservation.hallId.pricePerHour }}</td>
                    <td>{{ reservation.startDate|date('Y-m-d') }}</td>
                    <td>{{ reservation.endDate|date('Y-m-d') }}</td>
                    <td>{{ reservation.startTime|date('H:i') }}</td>
                    <td>{{ reservation.endTime|date('H:i') }}</td>
                    <td>{{ reservation.isConfirmed ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('app_reservation_show', {id: reservation.id}) }}" class="btn btn-primary btn-sm">Show</a>
                        <a href="{{ path('app_reservation_edit', {id: reservation.id}) }}" class="btn btn-secondary btn-sm">Edit</a>
                        <form method="post" action="{{ path('app_reservation_delete', {id: reservation.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this reservation?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">No reservations found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}

