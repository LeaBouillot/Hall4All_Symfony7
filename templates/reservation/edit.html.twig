{% extends 'base.html.twig' %}

{% block title %}Edit Reservation{% endblock %}

{% block body %}
<div class="container p-6 mx-auto">
    <h1 class="mb-6 text-2xl font-bold">Edit Reservation</h1>

    {# Formulaire d'édition de la réservation #}
    <div class="p-6 bg-white rounded-lg shadow-md">
        {{ form_start(form) }}

        <div class="mb-4">
            <label for="hall" class="block mb-2 font-bold text-gray-700">Hall</label>
            {{ form_widget(form.hallId, { 'attr': {'class': 'form-control block w-full mt-1 rounded-lg border-gray-300 shadow-sm'} }) }}
        </div>

        <div class="mb-4">
            <label for="start_date" class="block mb-2 font-bold text-gray-700">Start Date</label>
            {{ form_widget(form.startDate, { 'attr': {'class': 'form-control block w-full mt-1 rounded-lg border-gray-300 shadow-sm'} }) }}
        </div>

        <div class="mb-4">
            <label for="end_date" class="block mb-2 font-bold text-gray-700">End Date</label>
            {{ form_widget(form.endDate, { 'attr': {'class': 'form-control block w-full mt-1 rounded-lg border-gray-300 shadow-sm'} }) }}
        </div>

        <div class="mb-4">
            <label for="start_time" class="block mb-2 font-bold text-gray-700">Start Time</label>
            {{ form_widget(form.startTime, { 'attr': {'class': 'form-control block w-full mt-1 rounded-lg border-gray-300 shadow-sm'} }) }}
        </div>

        <div class="mb-4">
            <label for="end_time" class="block mb-2 font-bold text-gray-700">End Time</label>
            {{ form_widget(form.endTime, { 'attr': {'class': 'form-control block w-full mt-1 rounded-lg border-gray-300 shadow-sm'} }) }}
        </div>

       

        <button type="submit" class="px-4 py-2 font-bold text-white bg-green-500 rounded hover:bg-green-600">
            Save Changes
        </button>

        {{ form_end(form) }}
    </div>

    {# Formulaire de suppression de la réservation #}
    <form method="post" action="{{ path('app_reservation_delete', {'id': reservation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this reservation?');" class="mt-6">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
        <button class="px-4 py-2 font-bold text-white bg-red-500 rounded hover:bg-red-600" type="submit">Delete Reservation</button>
    </form>

    {# Lien pour retourner à la liste des réservations #}
    <a href="{{ path('app_reservation_index') }}" class="block px-4 py-2 mt-6 font-bold text-center text-white bg-gray-500 rounded hover:bg-gray-600">
        Back to Reservations
    </a>
</div>
{% endblock %}
