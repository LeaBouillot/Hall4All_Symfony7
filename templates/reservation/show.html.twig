{% extends 'base.html.twig' %}

{% block title %}Reservation Details
{% endblock %}

{% block body %}
    <h1>Reservation Details</h1>

    <table class="table">
        <tr>
            <td>{{ reservation.hallId.mainImg }}</td>
        </tr>
        <tr>
            <td>{{ reservation.hallId.name }}</td>
        </tr>
        <tr>
            <th>Area</th>
            <td>{{ reservation.hallId.area }}</td>
        </tr>
        <tr>
            <th>Capacity</th>
            <td>{{ reservation.hallId.capacityMax }}</td>
        </tr>
        <tr>
            <th>Equipement</th>
            <td>{{ reservation.hallId.hallEquipment }}</td>
        </tr>
        <tr>
            <th>Start Date</th>
            <td>{{ reservation.startDate|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>End Date</th>
            <td>{{ reservation.endDate|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Start Time</th>
            <td>{{ reservation.startTime|date('H:i') }}</td>
        </tr>
        <tr>
            <th>End Time</th>
            <td>{{ reservation.endTime|date('H:i') }}</td>
        </tr>
        <tr>
            <th>Price per hour</th>
            <td>{{ reservation.hallId.pricePerHour }}</td>
        </tr>
        <tr>
            <th>Confirmed</th>
            <td>{{ reservation.isConfirmed ? 'Yes' : 'No' }}</td>
        </tr>
    </table>

    <a href="{{ path('app_reservation_edit', {id: reservation.id}) }}" class="btn btn-primary">Edit</a>
    <a href="{{ path('app_reservation_index') }}" class="btn btn-secondary">Back to list</a>
{% endblock %}

